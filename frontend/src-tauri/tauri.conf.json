{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Audio Visualizer",
  "version": "0.1.0",
  "identifier": "com.audioclix.visualizer",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Audio Visualizer - Forensic Analysis",
        "width": 1200,
        "height": 700,
        "minWidth": 800,
        "minHeight": 500,
        "resizable": true,
        "fullscreen": false,
        "transparent": false,
        "decorations": true,
        "backgroundColor": [15, 15, 26, 255]
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png"
    ]
  }
}
